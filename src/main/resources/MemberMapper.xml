<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.MemberMapper">

    <select id="findByUsername" resultType="com.example.model.Member">
        SELECT * FROM members WHERE username = #{username}
    </select>

    <insert id="save">
        INSERT INTO members (username, password, is_vip) VALUES (#{username}, #{password}, #{vip})
    </insert>

    <!-- ResultMap for User entity -->
    <resultMap id="userResultMap" type="com.example.project.entity.User">
        <id property="id" column="id" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="type" column="type" />
        <!-- 映射其他字段 -->
    </resultMap>

    <!-- SQL statement to select a user by ID -->
    <select id="selectUserById" parameterType="java.lang.Long" resultMap="userResultMap">
        SELECT id, username, password, type
        FROM users
        WHERE id = #{id}
    </select>

</mapper>
